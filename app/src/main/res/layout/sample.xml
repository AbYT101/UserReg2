<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="134dp"
        app:cardBackgroundColor="@color/gray"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:contentPadding="@dimen/activity_horizontal_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray">

            <ImageView
                android:id="@+id/imageViewaa"
                android:layout_width="100dp"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:layout_height="100dp"
                android:background="@drawable/ic_user"
                android:text="M" />

            <TextView
                android:id="@+id/fullN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imageViewaa"
                android:fontFamily="sans-serif"
                android:padding="2dp"
                android:textStyle="bold"
                android:text="Full Name"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/userNa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fullN"
                android:layout_toRightOf="@id/imageViewaa"
                android:fontFamily="sans-serif"
                android:padding="2dp"
                android:text="user Name"
                android:layout_marginStart="15dp"
                android:textColor="@color/green"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/gender3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/userNa"
                android:layout_toRightOf="@id/imageViewaa"
                android:fontFamily="sans-serif"
                android:padding="2dp"
                android:text="Gender"
                android:layout_marginStart="15dp"
                android:textColor="@color/green"
                android:textSize="20sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>